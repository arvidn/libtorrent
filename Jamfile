	: <define>TORRENT_USE_WOLFSSL
	<define>TORRENT_USE_LIBCRYPTO
	<define>TORRENT_USE_OPENSSL
	<define>OPENSSL_NO_SSL2
	<define>BOOST_ASIO_USE_WOLFSSL
	<define>OPENSSL_ALL
	<define>WOLFSSL_SHA512
	<define>WOLFSSL_NGINX
	<define>WC_NO_HARDEN ;
